<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net472;net8.0;net9.0</TargetFrameworks>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <LangVersion>latest</LangVersion>
    <Version>0.0.0</Version>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.SqlServer.SqlManagementObjects" />
    <PackageReference Include="Microsoft.Data.SqlClient" />
    <PackageReference Include="Dapper" />
  </ItemGroup>
  
  <!-- For development -->
  <ItemGroup>
    <None Include="SQL\**">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      <CopyToPublishDirectory>PreserveNewest</CopyToPublishDirectory>
      <TargetPath>$(AssemblyName)\%(RecursiveDir)%(Filename)%(Extension)</TargetPath>
    </None>
  </ItemGroup>

  <!-- For nuget -->
  <ItemGroup>
    <None Include="SQL\**" Pack="true">
      <PackagePath>src\$(AssemblyName)</PackagePath>
    </None>
    <None Include="build\project.targets" Pack="true">
      <!-- .targets file must be named {AssemblyName}.targets, so we rename it here using $(AssemblyName) variable. -->
      <PackagePath>build\$(AssemblyName)%(Extension)</PackagePath>
    </None>
  </ItemGroup>
    
	<ItemGroup>
	  <ProjectReference Include="..\DbLive\DbLive.csproj" />
	</ItemGroup>
	
</Project>
