{ 
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        "**/.vs": true,
        "**/bin": true,
        "**/obj": true,
        "**/TestResults": true
    },

    "editor.tabSize": 4,

    "[sql]": {
        "editor.tabSize": 4
    },
    
    "dotnet.defaultSolution": "EasySqlFlow.sln",

    "testExplorer.useNativeTesting": true,
    "testExplorer.showOnRun": true,
    "dotnet-test-explorer.autoWatch": true,
    "dotnet-test-explorer.runInParallel": true
}

