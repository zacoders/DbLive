<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>net8.0</TargetFramework>
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>enable</Nullable>
	</PropertyGroup>

	<Target Name="PrepareProjectOutput" BeforeTargets="BeforeBuild">
		<RemoveDir Directories="$(TargetDir)$(AssemblyName)" />
		<WriteLinesToFile File="Scripts\projectdir.user" Lines="$(ProjectDir)" Overwrite="true" WriteOnlyWhenDifferent="true" />
	</Target>

	<ItemGroup>
		<None Include="Scripts\**\*" Visible="true">
			<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
			<TargetPath>$(AssemblyName)\%(RecursiveDir)%(Filename)%(Extension)</TargetPath>
		</None>
	</ItemGroup>

</Project>